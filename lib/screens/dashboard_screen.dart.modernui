  Future<void> _disconnectDevice(
  BuildContext context, 
  SensorProvider sensorProvider,
  ESP32Provider esp32Provider,
) async {
  try {
    // Show loading indicator
    showDialog(
      context: context,
      barrierDismissible: false,
      builder: (BuildContext context) {
        return const Center(
          child: CircularProgressIndicator(),
        );
      },
    );

    // Disconnect from ESP32
    await esp32Provider.disconnect();
    
    // Clear sensor data and reset state
    await sensorProvider.clearDeviceData();
    
    // Close the loading dialog
    if (mounted) {
      Navigator.of(context).pop();
    }
    
    // Show success message
    if (mounted) {
      ScaffoldMessenger.of(context).showSnackBar(
        const SnackBar(
          content: Text('Device disconnected successfully'),
          backgroundColor: Colors.green,
        ),
      );
    }
  } catch (e) {
    // Close the loading dialog if there's an error
    if (mounted) {
      Navigator.of(context).pop();
      ScaffoldMessenger.of(context).showSnackBar(
        SnackBar(
          content: Text('Error disconnecting device: $e'),
          backgroundColor: Colors.red,
        ),
      );
    }
